h1, h2 {
    color: #808080;
}

h1 {
    font-family: 'Oxygen', sans-serif;
    font-size: 36px;
}

input[type="radio"] {
    display: none;
}

input[type="radio"]+div {
    display: inline-block;
    margin-left: 20px;
    height: 50px;
    width: 50px;
    border-radius: 100%;
    opacity: 0.7;
}

input[type="radio"]:checked+div {
    opacity: 1;
}

.new {
    background-color: #E40075;
}

.edit {
    background-color: #0FA048;
}

.export {
    background-color: #0CAEE5;
}

.delete {
    background-color: #138397;
}

.radio-wrapper label {
    display: inline-block;
}


.wrapper .right-col {
    width: 500px;
    margin-left: 100px;
    float: right;
}

.wrapper .left-col {
    width: 360px;
    border-right: 1px dashed #0CAEE5;
    height: 180px;
    position: relative;
    float: left;
}

.wrapper {
    width: 980px;
    margin: 0 auto;
    height: 200px;
    border-bottom: 1px dashed #0CAEE5;
}








