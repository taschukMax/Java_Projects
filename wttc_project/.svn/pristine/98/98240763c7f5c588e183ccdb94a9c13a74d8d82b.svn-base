body {
    width: 50%;
    height: 600px;
    margin: auto;
    min-width: 800px;
}

.header {
    margin: auto;
    width: 770px;
    text-align: center;
    padding: 5px;
    position: relative;
}

.logo {
    margin: auto;
}

span {
    font-family: 'Raleway', sans-serif;
    font-size: 50px;
}

#main {
    border-radius: 5px;
    border: 2px dashed #008000;
    width: 580px;
    height: 280px;
    margin: 25px auto 0px;
}

.title {
    margin: auto;
    height: 40px;
    width: 330px;
}

h2 {
    font-family: 'Open Sans', sans-serif;
    font-size: 25px;
    margin: 5px 0 5px 40px;
}

.tournamenslist {
    width: 380px;
    margin: 20px auto 0px;
}

.tournament {
    font-size: 20px;
    width: 360px;
    padding: 5px;
    margin: auto 10px auto 10px;
}

.radiobuttons {
    height: 100px;
    width: 420px;
    margin: 20px auto 0px;
}

.button {
    display: inline-block;
    margin-left: 25px;
    height: 65px;
    width: 65px;
    border-radius: 100%;
    border: 2px dashed #4682b4;
    margin-top: 15px;
    cursor: hand;
    background-color: rgba(113, 113, 113, 0.18);
}

.submit {
    float: right;
    margin-top: 20px;
    -moz-box-shadow: inset 0px 0px 9px 3px #ffffff;
    -webkit-box-shadow: inset 0px 0px 9px 3px #ffffff;
    box-shadow: inset 0px 0px 9px 3px #ffffff;
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0.05, #ededed), color-stop(1, #f0f0f0));
    background: -moz-linear-gradient(center top, #ededed 5%, #f0f0f0 100%);
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr = '#ededed', endColorstr = '#f0f0f0');
    background-color: #ededed;
    -moz-border-radius: 6px;
    -webkit-border-radius: 6px;
    border-radius: 6px;
    border: 1px solid #dbdbdb;
    display: inline-block;
    color: #080808;
    font-family: Comic Sans MS;
    font-size: 13px;
    font-weight: bold;
    padding: 4px 20px;
    text-decoration: none;
}

.submit:hover {
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0.05, #f0f0f0), color-stop(1, #ededed));
    background: -moz-linear-gradient(center top, #f0f0f0 5%, #ededed 100%);
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr = '#f0f0f0', endColorstr = '#ededed');
    background-color: #f0f0f0;
    cursor: hand;
}

.submit:active {
    position: relative;
    top: 1px;
}

